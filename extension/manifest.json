{
    "name":             "Soccer Data Extension",
    "version":          "1.0.0",
    "description":      "自动获取足球赛事数据下载",
    
    "browser_action":   {
        "default_icon":     "soccer.png",
        "popup":            "popup.html"
    },

    "content_scripts":  [
        {
            "matches":    ["http://app.gooooal.com/*"],
            "js":         [
                            "jquery.min.js",
                            "jquery.url.js",
                            "content_script.js"
                          ]
        }
    ],

    "permissions":      [ "tabs"]
}

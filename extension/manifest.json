
{
    "name":             "Soccer Data Extension",
    "version":          "1.0.0",
    "manifest_version": 2,
    "description":      "自动获取足球赛事数据下载",
    
    "browser_action":   {
        "default_icon":     "soccer.png",
        "default_popup":    "popup.html"
    	   },

    "content_scripts":  [
            {
            "matches":    ["http://app.gooooal.com/*"],
            "js":         [
                            "jquery.min.js",
                            "jquery.url.js",
                            "content_script.js"
                          ]
            }
    ],

    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

    "permissions":      [ "tabs"]
}
